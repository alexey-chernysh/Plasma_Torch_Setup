<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem</item>
        <item name="android:headerBackground">@color/PSUBackground</item>
    </style>

    <style name="PlaceholderTemplate">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/HeaderText</item>
        <item name="android:divider">@color/HeaderText</item>
        <item name="android:textSize">@dimen/header_font_size</item>
    </style>

    <style name="PSUHeaderTemplate" parent ="@style/PlaceholderTemplate">
        <item name="android:background">@color/PSUBackground</item>
    </style>

    <style name="MetalHeaderTemplate" parent ="@style/PlaceholderTemplate">
        <item name="android:background">@color/MetalBackground</item>
    </style>

    <style name="HeaderText" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/HeaderText</item>
    </style>

    <style name="SpinnerText" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@color/EditBackground</item>
        <item name="android:textColor">@color/EditText</item>
        <item name="android:textSize">@dimen/header_font_size</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textColor">@color/EditText</item>
        <item name="android:background">@color/EditBackground</item>
        <item name="android:textSize">@dimen/header_font_size</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
    </style>

</resources>
