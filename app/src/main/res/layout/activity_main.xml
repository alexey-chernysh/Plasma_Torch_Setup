<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/primary_material_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Brand"
            android:textStyle="bold|italic"
            android:layout_weight="1"
            android:singleLine="true" />
        <Spinner
            android:id="@+id/brandName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:prompt="@string/PLEASE_SELECT"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addBrand"
            android:src="@drawable/ic_action_new"
            android:clickable="true"
            android:onClick="onClick" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deleteBrand"
            android:src="@drawable/ic_action_remove"
            android:onClick="onClick"
            android:clickable="true" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Series"
            android:layout_weight="1"
            android:textStyle="bold|italic"
            android:singleLine="true"/>
        <Spinner
            android:id="@+id/seriesName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:prompt="@string/PLEASE_SELECT"
            android:layout_weight="1" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addSeries"
            android:src="@drawable/ic_action_new"
            android:clickable="true"
            android:onClick="onClick" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deleteSeries"
            android:src="@drawable/ic_action_remove"
            android:onClick="onClick"
            android:clickable="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Model"
            android:layout_weight="1"
            android:textStyle="bold|italic"
            android:singleLine="true" />
        <Spinner
            android:id="@+id/modelName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:prompt="@string/PLEASE_SELECT"
            android:layout_weight="1" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addModel"
            android:src="@drawable/ic_action_new"
            android:clickable="true"
            android:onClick="onClick" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deleteModel"
            android:src="@drawable/ic_action_remove"
            android:onClick="onClick"
            android:clickable="true" />
    </LinearLayout>

</LinearLayout>
