<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/background_material_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/equipment_title"
            android:textStyle="bold|italic"
            android:textColor="@color/foreground_material_dark"
            android:singleLine="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/brand_title"
            android:textStyle="bold|italic"
            android:textColor="@color/foreground_material_dark"
            android:singleLine="true" />
        <Spinner
            android:id="@+id/brandName"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:prompt="@string/please_select_prompt"
            android:background="@color/background_material_light" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/series_title"
            android:textStyle="bold|italic"
            android:textColor="@color/foreground_material_dark"
            android:singleLine="true"/>
        <Spinner
            android:id="@+id/seriesName"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:prompt="@string/please_select_prompt"
            android:background="@color/background_material_light"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/model_title"
            android:textStyle="bold|italic"
            android:textColor="@color/foreground_material_dark"
            android:singleLine="true" />
        <Spinner
            android:id="@+id/modelName"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:prompt="@string/please_select_prompt"
            android:background="@color/background_material_light"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/metal_title"
            android:textStyle="bold|italic"
            android:textColor="@color/foreground_material_dark"
            android:singleLine="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/material_title"
            android:textStyle="bold|italic"
            android:textColor="@color/foreground_material_dark"
            android:singleLine="true" />
        <Spinner
            android:id="@+id/materialName"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:prompt="@string/please_select_prompt"
            android:background="@color/background_material_light"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/material_thickness_title"
            android:textStyle="bold|italic"
            android:textColor="@color/foreground_material_dark"
            android:singleLine="true" />
        <EditText
            android:id="@+id/materialThickness"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@color/background_material_light"
            android:clickable="true"
            android:inputType="numberDecimal" />
        <TextView
            android:id="@+id/materialThicknessUnits"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/material_thickness_units"
            android:textStyle="bold|italic"
            android:textColor="@color/foreground_material_dark"
            android:singleLine="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/settings_title"
            android:textStyle="bold|italic"
            android:textColor="@color/foreground_material_dark"
            android:singleLine="true" />
    </LinearLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/table_column_system"
                android:layout_gravity="center_horizontal"
                android:background="@color/background_material_light"
                android:text="@string/system_header" />
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/background_material_dark"/>
            <TextView
                android:id="@+id/table_column_current"
                android:layout_gravity="center_horizontal"
                android:background="@color/background_material_light"
                android:text="@string/current_header" />
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/background_material_dark"/>
            <TextView
                android:id="@+id/table_column_pierce_height"
                android:layout_gravity="center_horizontal"
                android:background="@color/background_material_light"
                android:text="@string/pierce_height_header" />
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/background_material_dark"/>
            <TextView
                android:id="@+id/table_column_pierce_time"
                android:layout_gravity="center_horizontal"
                android:background="@color/background_material_light"
                android:text="@string/pierce_time_header" />
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/background_material_dark"/>
            <TextView
                android:id="@+id/table_column_cut_height"
                android:layout_gravity="center_horizontal"
                android:background="@color/background_material_light"
                android:text="@string/cutting_height_header" />
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/background_material_dark"/>
            <TextView
                android:id="@+id/table_column_cut_voltage"
                android:layout_gravity="center_horizontal"
                android:background="@color/background_material_light"
                android:text="@string/cutting_voltage_header" />
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/background_material_dark"/>
            <TextView
                android:id="@+id/table_column_cut_speed"
                android:layout_gravity="center_horizontal"
                android:background="@color/background_material_light"
                android:text="@string/cutting_speed_header" />
        </TableRow>
    </TableLayout>

</LinearLayout>
