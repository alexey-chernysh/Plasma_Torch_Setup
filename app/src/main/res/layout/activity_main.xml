<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/background_material_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/brand_title"
            android:textStyle="bold|italic"
            android:layout_weight="1"
            android:textColor="@color/foreground_material_dark"
            android:singleLine="true" />
        <Spinner
            android:id="@+id/brandName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:prompt="@string/please_select_prompt"
            android:background="@color/background_material_light"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/series_title"
            android:layout_weight="1"
            android:textStyle="bold|italic"
            android:textColor="@color/foreground_material_dark"
            android:singleLine="true"/>
        <Spinner
            android:id="@+id/seriesName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:prompt="@string/please_select_prompt"
            android:background="@color/background_material_light"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/model_title"
            android:layout_weight="1"
            android:textStyle="bold|italic"
            android:textColor="@color/foreground_material_dark"
            android:singleLine="true" />
        <Spinner
            android:id="@+id/modelName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:prompt="@string/please_select_prompt"
            android:background="@color/background_material_light"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/material_title"
            android:layout_weight="1"
            android:textStyle="bold|italic"
            android:textColor="@color/foreground_material_dark"
            android:singleLine="true" />
        <Spinner
            android:id="@+id/materialName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:prompt="@string/please_select_prompt"
            android:background="@color/background_material_light"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/material_thickness"
            android:layout_weight="1"
            android:textStyle="bold|italic"
            android:textColor="@color/foreground_material_dark"
            android:singleLine="true" />
        <EditText
            android:id="@+id/materialThickness"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:prompt="@string/please_select_prompt"
            android:background="@color/background_material_light"
            android:layout_weight="1"
            android:editable="true"
            android:numeric="decimal" />
    </LinearLayout>
</LinearLayout>
