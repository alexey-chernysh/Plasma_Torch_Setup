<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal"
    android:background="@color/EditBackground"
    android:textColor="@color/EditText"
    tools:context=".ThicknessPickerDialog">

    <NumberPicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/thickness_picker"
        android:descendantFocusability="blocksDescendants"
        android:background="@color/MetalBackground"
        android:backgroundTint="#000055" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="New Button"
        android:id="@+id/hidden_button"
        android:alpha="0"
        android:layout_gravity="center" />


</FrameLayout>
