<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="ru.chernysh.myapplication.MetalTypeFragment"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:id="@+id/metal_type_frag"
    android:background="#FF0000AA"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="@string/placeholder"
        android:id="@+id/metal_name_text"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        android:layout_gravity="top|left"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="@string/placeholder"
        android:id="@+id/metal_thickness_text"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        android:layout_gravity="top|center_horizontal"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="@string/mm"
        android:id="@+id/thickness_units_text"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        android:layout_gravity="top|right"
        android:textColor="#FFFFFFFF" />
</LinearLayout>
